<!DOCTYPE html>
<html lang="en">

     <!-- INCLUDES HEAD-->
<%- include('../partials/head', {title: producto.name}) %> <!--Para agregarle algo al title-->


<body> 
 
<!-- INCLUDES HEADER-->
<%- include("../partials/header") %>
<main>
    <section class="mainDetailProducts">
    <section class="product">
        <div class="productTitle">
            <h2 name="name"><%= producto.name %></h2>
            <p></p>
            <p class="productTitleCreator"><%= producto.brand %></p>
        </div>
        <div class="productAdd">
            <!-- <div class="masMenos">
                <button>+</button>
                icon favorite, add product, cart<h3>1</h3>
                <button>-</button>
            </div> -->
            <button><h3>AGREGAR A CARRITO</h3></button>
            <!-- <button><i class="fa-regular fa-heart"></i></button> -->
        </div>


    </section>
    <section class="productSpec"> 
        <img name="image" src="img/products/<%= producto.image %>" alt="">
        <div class="productSpecInfo">
            <div class="product-price">
                <p class="price">$<%= toThousand(product.price) %></p>
                <% if (product.discount !== 0) { %>
                  <p><%= product.discount %>  % OFF</p>
                  <p name="finalPrice">$ <%= toThousand(product.price - (product.price * product.discount / 100)) %></p>
                <% } %>
              </div>
            <h3>Especificaciones del producto</h3>
            <p> <%= producto.detail %></p>
        </div>
        </div>
    </section>
</section>
</main>
 <!-- INCLUDES FOOTER-->
<%- include('../partials/footer') %>
<script src="js/validations/addItemCart.js"></script>

</body>
</html>