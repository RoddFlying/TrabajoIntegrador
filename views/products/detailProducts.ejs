<!DOCTYPE html>
<html lang="en">

     <!-- INCLUDES HEAD-->
<%- include('../partials/head') %> <!--Para agregarle algo al title  , {title: producto.name})-->


<body> 
 
<!-- INCLUDES HEADER-->
<%- include("../partials/header") %>
<main>
    <section class="mainDetailProducts">
    <section class="product">
        <div class="barratop">
        <div class="productTitle">
            <h2 name="name"><%= producto.name %></h2>
            <p></p>
            <p class="productTitleCreator"><%= producto.brand %></p>
        </div>
        <div class="productAdd">
            <!-- <div class="masMenos">
                <button>+</button>
                icon favorite, add product, cart<h3>1</h3>
                <button>-</button>
            </div> -->
            <button id="agregarcarrito"><h3>AGREGAR A CARRITO</h3></button>
            <button><i class="fa-regular fa-heart"></i></button> 
            
        </div>
    </div>
     <div class="productSpec">
            <img src="../../public/img/products/<%= producto.image %>" alt="" name="image">
            <div class="productSpecInfo">
                <div class="product-price">
                    <h3 class="price" name="price">$<%= producto.price %></h3>
                    <% if (producto.discount !== 0) { %>
                      <h3 class="discount" name="discount"><%= producto.discount %>  % OFF</h3>
                      <h3 >$ <%= producto.price - (producto.price * producto.discount / 100) %></h3>
                    <% } %>
                  </div>
                <p><%= producto.detail %></p>
            </div>
        </div>


    </section>


  <!-- Agregar PRECIO IMAGEN DESCRIPCION -->


</section>
</main>
 <!-- INCLUDES FOOTER-->
<%- include('../partials/footer') %>
<script src="../../public/js/validations/addItemCart.js"></script>

</body>
</html>