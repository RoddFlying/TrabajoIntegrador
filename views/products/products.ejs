<!DOCTYPE html>
<html lang="en">

     <!-- INCLUDES HEAD-->
<%- include('../partials/head', {title: Productos})) %>
<body>
    <!-- INCLUDES HEADER-->
<%- include('../partials/header') %>

<main>
  <section class="products">
    
    <% for(let objeto of ps) { %>
    <a href="product/detail/<%= object.id %>">
    <article class="product-item" name="id">
     <img src="<%= object.image %>" name="image" alt="image-product">
     <div class="product-price">
        <p class="price" name="price">$<%= object.price %></p>
        <% if(sale){%>
          <p class="discount" name="discount"> <%= object.discount %>%OFF</p>
        <%}%>
      </div>
      <h3 class="name" name="name"><%= object.name %></h3>
      <h5 class="category" name="category"><%= object.category %></h5>

    </article>
    </a>
    <% } %>
  
    </section>
</main>

  <!-- INCLUDES FOOTER-->
<%- include('../partials/footer') %>
</body>
</html>