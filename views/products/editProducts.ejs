<html lang="en">
<head>
     <!-- INCLUDES HEAD-->

<%- include('../partials/head',{title: 'Editando: ' + producto.name}) %>


</head>
<body>
    <!-- INCLUDES HEADER-->
<%- include('../partials/header') %>

<!--usar css de createProductStyle.css-->
<main>
  <section class="registroProducto">
    <div class="subtitulo">
      <h2>Estas editando: <%= producto.name %></h2>
    </div>

<!--faltan categorias-->
 <form id="editprod" action="/products/edit/<%= producto.id %>?_method=PUT" method="POST" enctype="multipart/form-data">

   <div class="group">

     <div class="formProducts">
       <label for="name" class="form-label">Nombre del producto</label>
       <input type="text" id="name" name="name" value="<%= producto.name %>" placeholder="<%= producto.name %>" class="form-input">
     </div>

     <div class="formProducts">
       <label for="price" class="form-label"> Precio del producto </label>
       <input type="number" id="price" name="productprice" placeholder="<%= producto.price %>" value="<%= producto.price %>"class="form-input"> <!--Porque aca tiene procutprice y en los demas oslo discount etc.-->
     </div>

     <div class="formProducts">
      <label for="brand" class="form-label">Marca del producto</label>
      <input type="text" id="brand" value="<%= producto.brand %>" name="brand" placeholder="<%= producto.brand %>" class="form-input">
    </div>
    
   </div>

   <div class="group">

     <div class="formProducts">
       <label for="discount" class="form-label">Descuento</label>
       <input type="number" id="discount" name="discount" placeholder="<%= producto.discount %>" value="<%= producto.discount %>"class="form-input">
     </div>

     <div class="formProducts">
      <label for="category" class="form-label">Categoría</label>
      <select id="category" name="category" value= "<%= producto.category %>" class="form-input">
        <option value="1">carpas</option>
        <option value="2">fertilizantes</option>
        <option value="3">frascos</option>
        <option value="4">hidroponia</option>
        <option value="5">luces</option>
        <option value="6">parafrenalia</option>
        <option value="7">picadores</option>
        <option value="8">sustratos</option>
      </select>
    </div>
    
     

   </div>

   <div class="group">

     <div class="formProducts">
       <label for="image" class="form-label">Seleccionar Imagen:</label>
       <input id= "imagefile" type="file" name="imageProd" value="<%= producto.image %>">
     </div>

     <div class="formProducts">
       <label for="detail" class="form-label" >  Descripción </label>
       <textarea name="detail" id="detail" value="<%= producto.detail %>" placeholder="<%= producto.detail %>"  class="form-input"></textarea>
     </div>

   </div>
   <div class="botton">

     <div class="formProducts">
       <button type="submit" class="action-button edit">Guardar Cambios</button>
     
     </div>

   </div>
   
   </form>
   <form action="/product/delete/<%= producto.id %>?_method=DELETE" method="POST">
    <button type="submit" class="action-button delete">Eliminar</button>
   </form>

   </section>
</main>

  <!-- INCLUDES FOOTER-->
<%- include('../partials/footer') %>

