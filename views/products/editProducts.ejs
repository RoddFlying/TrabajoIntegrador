<!DOCTYPE html>
<html lang="en">
<head>
     <!-- INCLUDES HEAD-->

<%- include('../partials/head',{title: 'Editando: ' + producto.name}) %>


</head>
<body>
    <!-- INCLUDES HEADER-->
<%- include('../partials/header') %>

<!--usar css de createProductStyle.css-->
<main>
  <section class="registroProducto">
    <div class="subtitulo">
      <h2>Estas editando: <%= producto.name %></h2>
    </div>

<!--faltan categorias-->
 <form id="editprod" action="/products/edit/<%= producto.id %>?_method=PUT" method="POST" enctype="multipart/form-data">

   <div class="group">

     <div class="formProducts">
       <label for="name" class="form-label">Nombre del producto</label>
       <input type="text" id="name" name="name" value="<%= producto.name %>" placeholder="<%= producto.name %>" class="form-input">
     </div>

     <div class="formProducts">
       <label for="price" class="form-label"> Precio del producto </label>
       <input type="number" id="price" name="price" placeholder="<%= producto.price %>" value="<%= producto.price %>"class="form-input"> <!--Porque aca tiene procutprice y en los demas oslo discount etc.-->
     </div>

   </div>

   <div class="group">

     <div class="formProducts">
       <label for="discount" class="form-label">Descuento</label>
       <input type="number" id="discount" name="discount" placeholder="<%= producto.discount %>" value="<%= producto.discount %>"class="form-input">
     </div>

     <div class="formProducts">
       <label for="category" class="form-label">Categoría</label>
       <% if (producto.category=="viseted") { %>
       <select id="category" name="category" class="form-input">
         <option value="">Elegí</option>
         <option value="in-sale">En oferta</option>
         <option value="visited" selected>Últimos agregados</option>
       </select>
       <% } else { %>
        <select id="category" name="category" class="form-input">
          <option value="">Elegí</option>
          <option value="in-sale" selected>En oferta</option>
          <option value="visited" >Últimos agregados</option>
        </select>
      <% } %>
     </div>

   </div>

   <div class="group">

     <div class="formProducts">
       <label for="image" class="form-label">Seleccionar Imagen:</label>
       <input id= "imagefile" type="file" name="image" value="<%= producto.image %>">
     </div>

     <div class="formProducts">
       <label for="detail" class="form-label" >  Descripción </label>
       <textarea name="detail" id="detail" value="<%= producto.detail %>"class="form-input"></textarea>
     </div>

   </div>
   <div class="botton">

     <div class="formProducts">
       <button type="submit" class="action-button edit">Guardar Cambios</button>
     
     </div>

   </div>
   
   </form>
   <form action="/product/delete/<%= producto.id %>?_method=DELETE" method="POST">
    <button type="submit" class="action-button delete">Eliminar</button>
   </form>

   </section>
</main>

  <!-- INCLUDES FOOTER-->
<%- include('../partials/footer') %>

<script src="../js/validations/productEdit.js"></script>
</body>
</html>